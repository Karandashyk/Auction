<!--<p id="notice"><%#= notice %></p>-->
<div class="information wrapper container-fluid">

  <p class="img-wrapper">
    <%= image_tag("#{@product.name}.jpg", alt: "img") %>
  </p>

  <div class="col-xs-offset-4 col-xs-3 fields-wrapper">
    <div class="field ">
      <span class="name">
        <%= @product.name %>
      </span>
    </div>
    <div class="field ">
      <span>Category:</span>
      <%= @product.category %>
    </div>
    <div class="field ">
      <span>Price:</span>
      <%= @product.start_price %>
    </div>
    <div class="field ">
      <span>Description:</span>
      <%= @product.description %>
    </div>
  </div>
  <div class="col-xs-3 fields-wrapper products-fields-wrapper">
    <span>Next minimum step: <%= @product.start_price * 1.1 %></span><br>
    <input type="number"><br>
    <button>Place a bet</button>
  </div>

  <div class="links col-xs-offset-3 col-xs-6 ">
    <%#= link_to 'Edit', edit_product_path(@product) %>
    <%#= link_to 'Back', products_path %>
  </div>

  <div class="producer-rate col-xs-2">
    <span>Producer rate</span>
    <div class="rate"></div>
    <div><%= @product.description %></div>
  </div>
</div>
